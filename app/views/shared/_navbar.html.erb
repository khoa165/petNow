<section id="home">
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <!--   default navbar not logged in, branded navbar -->
    <div class="navbar-left">
      <%= link_to root_path, class: "navbar-brand" do %>
      <div class="navbar-logo">
        <h5><i class="fas fa-paw"></i> PetNow</h5>
      </div>
      <% end %>
    </div>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse navbar-right" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
        <!-- put user type logic here -->
        <li class="nav-item active">
          <%= link_to "Search", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Manage pets", pets_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Bookings", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown ml-3">
          <%= image_tag "https://images.unsplash.com/photo-1517849845537-4d257902454a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
           <!-- put user name logic here -->
           <% if current_user.first_name.nil?%>
              <%= link_to current_user.email, "#", class: "dropdown-item" %>
              <% else %>
              <%= link_to current_user.first_name,"#", class: "dropdown-item" %>
            <% end %>
           <%= link_to "Edit profile", "#", class: "dropdown-item" %>
           <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
         </div>
       </li>
       <% else %>
       <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
      <% end %>
    </ul>
  </div>
</section>

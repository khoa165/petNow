<section id="home">
  <nav id="navbar" class="navbar navbar-expand-md navbar-dark fixed-top px-lg-5">
    <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
      <div class="navbar-logo">
        <h5><i class="fas fa-paw"></i> PetNow</h5>
      </div>
    <% end %>

    <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#myNavbar" aria-controls="myNavbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse text-right" id="myNavbar">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
        <!-- put user type logic here -->
        <li class="nav-item">
          <%= link_to "Search", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Manage pets", pets_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Bookings", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown ml-3">
          <%= image_tag "https://images.unsplash.com/photo-1507682520764-93440a60e9b5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1850&q=80", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
           <!-- put user name logic here -->
           <% if current_user.first_name.nil?%>
              <%= link_to current_user.email, "#", class: "dropdown-item" %>
              <% else %>
              <%= link_to current_user.first_name,"#", class: "dropdown-item" %>
            <% end %>
           <%= link_to "Edit profile", "#", class: "dropdown-item" %>
           <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
         </div>
       </li>
       <% else %>
       <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
      <% end %>
    </ul>
  </nav>
</section>

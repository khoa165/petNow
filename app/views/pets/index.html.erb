<h1>Pets#index</h1>
<p>Find me in app/views/pets/index.html.erb</p>
<div class="container">
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-4">
        <div class="card p-3">
          <ul class="list-unstyled">
            <li><%= pet.name %></li>
            <li><%= pet.species %></li>
            <li><%= pet.age %></li>
          </ul>
          <%= link_to "Details", pet_path(pet) %>
        </div>
      </div>
    <% end %>
   </div>
</div>


<div class="d-flex justify-content-between align-items-center p-2">
  <h1 class="text-center mt-3 font-weight-bold"><%= current_user.email %>'s pets</h1>
  <%= link_to "Add pet", new_pet_path, class: 'btn btn-success text-white mr-3' %>
</div>

<div class="container">
  <div class="row p-4">
    <% @pets.each do |pet| %>
      <div class="col-4">
        <div class="card p-3 mt-2 text-dark">
          <img src="https://picsum.photos/200/200" alt="">
          <ul class="list-unstyled mt-2">
            <li><h4 class="font-weight-bold"><%= pet.name %></h4></li>
            <li>Species: <%= pet.species %></li>
            <li>Age: <%= pet.age %></li>
          </ul>
          <div class="">
            <%= link_to "Details", pet_path(pet), class: 'text-success' %>
            <%= link_to "Edit", edit_pet_path(pet), class: 'text-warning mx-3' %>
            <%= link_to "Delete", pet_path(pet), method: :delete, class: 'text-danger' %>
          </div>
        </div>
      </div>
    <% end %>
   </div>
</div>


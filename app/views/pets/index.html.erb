<div class="banner banner-sm d-flex align-items-center" style="background-image: linear-gradient(rgba(0, 0, 0, 0.2),rgba(0, 0, 0, 0.2)), url(https://images.unsplash.com/photo-1548767797-d8c844163c4c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2102&q=80);">
  <div class="container">
    <div class="px-3">
      <h1 class="mb-1 text-white"><%= current_user.first_name %>'s pets</h1>
      <%= link_to "Add a pet", new_pet_path, class: 'btn button btn-red text-white mt-1' %>
    </div>
  </div>
</div>
<div class="container py-5">
  <div class="row">
    <% @pets.each do |pet| %>
    <div class="col-12 col-lg-4">
      <div class="card my-3">
        <div class="px-3">
          <%= cl_image_tag pet.photo, style: "object-fit: cover;", class: "card-img-top pt-3"%>
          <div>
            <h4 class="pet-name py-3 font-weight-bold"><%= pet.name %></h4>
            <div class="my-2">
              <p class="m-0">Age: <%= pet.age %></p>
              <p class="m-0">Species: <%= pet.species %></p>
              <p class="m-0">Price per day: <%= pet.price_per_day %></p>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-end pet-extra-info pt-2 px-3">

          <%= link_to pet_path(pet), class: 'text-primary mr-3' do %>
            <div class="d-flex justiy-content-betwee">
              <i class="fas fa-info-circle"></i>
              <p class="ml-1"> Info </p>
              </div>
          <% end %>

          <%= link_to edit_pet_path(pet), class: 'text-secondary mr-3' do %>
            <div class="d-flex justify-space-between">
              <i class="fas fa-edit"></i>
              <p class="ml-1"> Edit </p>
              </div>
          <% end %>

          <%= link_to pet_path(pet), method: :delete, data: {confirm: 'Are you sure?'}, class: 'text-danger ' do %>
            <div class="d-flex justify-space-between">
              <i class="fas fa-trash-alt"></i>
              <p class="ml-1"> Remove </p>
            </div>
          <% end %>

        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>


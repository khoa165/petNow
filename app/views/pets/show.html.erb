<div class="container py-3 text-center">
  <div class="row">
    <%= cl_image_tag @pet.photo, height: 300, class: "col-sm-8 p-0 image-top" %>
    <div class="col-sm-4 my-color text-white">
      <h2 class="font-weight-bold mt-5"><%= @pet.name %></h2>
      <p>Age: <%= @pet.age %></p>
      <p>Species: <%= @pet.species %></p>
    </div>
  </div>
</div>



<div class="container py-3">
  <div class="row">
    <div class="col-sm-6 bg-secondary text-white mb-3 py-3">
      <%= simple_form_for([@pet, @booking]) do |f| %>
        <div class="form-group">
          <%= f.input :start_date, as: :date, html5: true, class: 'form-control' %>
          <%= f.input :end_date, as: :date, html5: true, class: 'form-control' %>
        </div>
        <%= f.submit class: 'btn button text-white' %>
      <% end %>
    </div>
    <div class="col-sm-6 bg-secondary text-white mb-3"></div>
  </div>
</div>

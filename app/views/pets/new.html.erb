<div class="container">
  <div class="row">
    <div class="col-6 offset-3 bg-secondary text-white p-3 my-3">
      <%= simple_form_for(@pet) do |f| %>
        <div class="form-group">
          <%= f.input :name, class: 'form-control' %>
          <%= f.input :category, collection: Pet::CATEGORIES, prompt: "Choose", class: 'form-control' %>
          <%= f.input :species, class: 'form-control' %>
          <%= f.input :age, class: 'form-control' %>
          <%= f.input :price_per_day, class: 'form-control' %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>
        <div class="text-center">
          <%= f.submit class: 'btn button text-white' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

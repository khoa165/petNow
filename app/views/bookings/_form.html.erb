<%= simple_form_for [@pet, @booking] do |f| %>
<div class="form-group">
  <%= f.input :start_date, as: :string, required: false, input_html: {id: "range_start", class: "datepicker form-control"} %>
  <%= f.input :end_date, as: :string, required: false, input_html: {id: "range_end", class: "datepicker form-control"} %>
</div>
<%= f.button :submit, "Pet now", class: "btn btn-outline-red" %>
<% end %>

<div class="container py-5">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-9">
      <h1 class="font-weight-bold">Your upcoming bookings</h1>
    </div>
  </div>
  <div class="row">
    <% @pets_bookings.each do |pet_bookings| %>
    <!-- <div class="col-12 col-md-6 offset-md-3"> -->
      <% if pet_bookings.size > 0 %>
        <div class="col-8 offset-2">
          <h1><%= pet_bookings.first.pet.name %></h1>
          <% pet_bookings.each do |booking| %>
            <div class="card-booking py-3">
              <div class="row">
                <div class="col-3">
                  <%= cl_image_tag booking.pet.photo %>
                </div>
                <div class="col-9 d-flex justify-content-between">

                  <div class="card-booking-infos">
                    <p> <%= booking.start_date %> - <%= booking.end_date%> </p>
                    <h2><%= booking.pet.name%></h2>
                    <p><%= booking.pet.address%></p>
                  </div>
                  <div class="card-booking-infos border-left">
                    <p>Total: <%= booking.compute_price(booking.pet.price_per_day) %></p>
                    <%= link_to "view booking", booking_path(booking) %>
                  </div>
                </div>
              </div>
              <!-- <div class="card-booking-infos"> -->
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

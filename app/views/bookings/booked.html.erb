<div class="container py-5">
  <h1>Your upcoming bookings</h1>
  <div class="row">
    <% @pets_bookings.each do |pet_bookings| %>
    <!-- <div class="col-12 col-md-6 offset-md-3"> -->
      <div class="col-12">
      <h1>Pet</h1>
      <% pet_bookings.each do |booking| %>
      <div class="card-booking justify-content-between">
        <%= cl_image_tag booking.pet.photo %>
        <!-- <div class="card-booking-infos"> -->
        <div class="card-booking-infos">
          <p> <%= booking.start_date %> - <%= booking.end_date%> </p>
          <h2><%= booking.pet.name%></h2>
          <p><%= booking.pet.address%></p>
        </div>
         <div class="card-booking-infos">
          <p>Total: <%= booking.compute_price(booking.pet.price_per_day) %></p>
          <%= link_to "view booking", booking_path(booking) %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
